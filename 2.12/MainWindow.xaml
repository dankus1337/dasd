<Window x:Class="_1122.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1122"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="5" Orientation="Horizontal" OpacityMask="White">
            <Image Source="school_logo.png" Width="120" Height="120"></Image>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="#FF04A0FF">
                <Label HorizontalAlignment="Center" Content="Логин" MinHeight="25" FontFamily="Comic Sans MS" FontSize="14" Foreground="White"></Label>
            <Label Content="Пароль" MinHeight="25" FontFamily="Comic Sans MS" FontSize="14" Foreground="#FFFDFDFD"></Label>
         </StackPanel>
         <StackPanel HorizontalAlignment="Center" Height="60" VerticalAlignment="Center" Margin="0" Background="#FF04A0FF">
            <TextBox Margin="3" Height="22"></TextBox>
            <TextBox Margin="3" Height="22" Width="190"></TextBox>
        </StackPanel>
        </StackPanel>


    </Grid>
</Window>
